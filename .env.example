# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=spinwheel
DB_PASSWORD=your_secure_password
DB_DATABASE=spinwheel_db
DB_SYNCHRONIZE=false
DB_LOGGING=false

# Redis Configuration (for caching and pub/sub)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Blockchain Configuration - Sepolia Testnet
CHAIN_ID=11155111
RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
RPC_WEBSOCKET_URL=wss://sepolia.infura.io/ws/v3/YOUR_INFURA_KEY
FALLBACK_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Smart Contract
CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
CONTRACT_DEPLOYMENT_BLOCK=0

# Indexer Configuration
INDEXER_ENABLED=true
INDEXER_BLOCK_BATCH_SIZE=1000
INDEXER_POLL_INTERVAL=12000
INDEXER_CONFIRM_BLOCKS=3
INDEXER_MAX_RETRIES=3

# API Configuration
API_RATE_LIMIT_TTL=60
API_RATE_LIMIT_LIMIT=100
API_CACHE_TTL=30

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# WebSocket Configuration
WS_CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Security
JWT_SECRET=your_jwt_secret_change_this_in_production

# Monitoring (optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
